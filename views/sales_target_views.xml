<odoo>
    <!-- LIST VIEW -->
    <record id="view_sales_target_list" model="ir.ui.view">
        <field name="name">sales.target.list</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <list string="Salesperson Sales Target">
                <field name="name"/>
                <field name="salesperson_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="target_point"/>
                <field name="target_amount"/>
                <field name="achievement_amount"/>
                <field name="difference_amount"/>
                <field name="achievement_percent"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_sales_target_form" model="ir.ui.view">
        <field name="name">sales.target.form</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <form string="Salesperson Sales Target">
                <header>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            states="draft"
                            class="btn-primary"/>

                    <button name="action_close"
                            type="object"
                            string="Close"
                            states="open"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,open,closed"
                           statusbar_status="state"/>
                </header>

                <sheet>
                    <group>
                        <!-- LEFT SIDE -->
                        <group>
                            <field name="salesperson_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="responsible_id"/>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                        </group>

                        <!-- RIGHT SIDE -->
                        <group>
                            <field name="target_point"/>
                            <field name="target_amount"/>
                            <field name="achievement_amount" readonly="1"/>
                            <field name="difference_amount" readonly="1"/>
                            <field name="achievement_percent" readonly="1"/>
                        </group>
                    </group>

                    <group string="Theoretical Data">
                        <field name="theoretical_amount" readonly="1"/>
                        <field name="theoretical_percent" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Sales Orders">
                            <list editable="bottom">
                                <field name="name"/>
                            </list>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_sales_target" model="ir.actions.act_window">
        <field name="name">Salesperson Sales Target</field>
        <field name="res_model">sales.target</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
